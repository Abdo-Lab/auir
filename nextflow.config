manifest {
        description = 'Tychus'
}

env {
        TRIMMOMATIC='/opt/trimmomatic/Trimmomatic-0.36'
}

docker {
        enabled = true
        fixOwnership = true
}

process.$Trimmomatic.container = "cdeanj/trimmomatic:1.0"
process.$BWA.container = "cdeanj/bwa:1.0"
process.$RemoveHostDNA.container = "cdeanj/samtools:1.0"
process.SPAdes.container = "cdeanj/spades:1.0"
process.$MultiQC.container = "cdeanj/multiqc:1.0"
